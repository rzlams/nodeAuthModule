{
  "restartable": "rs",
  "verbose": true,
  "ignore": [".git", "node_modules/**/node_modules", "*.spec.ts", "fixtures/*"],
  "ext": "js,json,ts",
  "watch": ["src/"],
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "start": "",
    "restart": "",
    "crash": "",
    "exit": "kill-port 4444"
  }
}
